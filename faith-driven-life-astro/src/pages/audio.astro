---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="A FAITH DRIVEN LIFE â€” Audio" description="Listen to teachings and audio content." sideBarActiveItemID="audio">
  <section class="py-8">
    <h1 class="text-2xl font-serif font-semibold text-primary mb-2">Audio</h1>
    <p class="text-base-content/70 mb-8">Listen to teachings and encouragement.</p>

    <div class="audio-list space-y-6">
