---
const { activeId = "" } = Astro.props;
const navLinks = [
  { id: "home", href: "/", label: "Home" },
  { id: "blogs", href: "/blog/", label: "Blogs" },
  { id: "resources", href: "/resources", label: "Resources" },
  { id: "audio", href: "/audio", label: "Audio" },
  { id: "bible", href: "/bible", label: "Search the Bible" },
  { id: "comments", href: "/comments", label: "Comments" },
  { id: "prayer", href: "/prayer-requests", label: "Prayer requests" },
  { id: "testimonies", href: "/testimonies", label: "Testimonies" },
];
---

<nav class="site-nav fixed top-0 left-0 right-0 z-40 bg-base-100 border-b border-base-content/10" aria-label="Main">
  <div class="nav-inner max-w-full w-full mx-auto px-4 py-4 flex flex-wrap items-center justify-between gap-4">
    <a href="/" class="site-name flex items-center gap-3 font-bold text-base-content hover:text-primary no-underline shrink-0">
      <img src="/logo.png" alt="A Faith Driven Life" class="site-logo h-24 md:h-40 w-auto max-w-[280px] md:max-w-[320px] object-contain" onerror="this.style.display='none'" />
    </a>
    <ul class="nav-links flex flex-wrap gap-1 list-none m-0 p-0">
      {navLinks.map((link) => (
        <li>
          <a
            href={link.href}
            class:list={[
              "nav-link px-3 py-2 rounded-full text-sm font-medium no-underline transition-colors",
              (link.id === "blogs" || link.id === "resources")
                ? "border border-primary/40 text-primary shadow-[0_0_12px_rgba(212,175,55,0.2)] hover:border-primary hover:shadow-[0_0_16px_rgba(212,175,55,0.4)]"
                : "text-info hover:text-primary",
              activeId === link.id ? "text-primary font-semibold" : "",
            ]}
          >
            {link.label}
          </a>
        </li>
      ))}
    </ul>
  </div>
</nav>

<style>
  .site-nav {
    min-height: 12rem;
  }
  @media (min-width: 768px) {
    .site-nav { min-height: 14rem; }
    .site-nav .nav-links a { font-size: 1rem; }
  }
  @media (max-width: 767px) {
    .site-nav {
      max-height: 25vh;
      min-height: 0;
      overflow-y: auto;
      padding: 0.4rem 0.75rem;
    }
    .site-nav .site-logo {
      height: 3.25rem;
      max-width: 120px;
    }
    .site-nav .nav-links {
      gap: 0.2rem 0.5rem;
    }
    .site-nav .nav-link {
      padding: 0.35em 0.6em;
      font-size: 0.8rem;
    }
  }
</style>
